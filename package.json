{
  "name": "userscripts",
  "version": "1.0.0",
  "description": "My User Scripts",
  "private": true,
  "scripts": {
    "prebuild": "npm run clean",
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "postbuild": "npm run lint:userscripts",
    "clean": "rimraf dist",
    "predev": "npm run clean",
    "dev": "rollup --config rollup.config.ts --configPlugin typescript --watch",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:userscripts": "eslint --no-eslintrc --config .eslintrc.userscripts.js 'dist/**/*.js'",
    "test": "jest --passWithNoTests"
  },
  "engines": {
    "node": "16.11.1"
  },
  "devDependencies": {
    "@munierujp/eslint-config-typescript": "1.0.4",
    "@rollup/plugin-typescript": "9.0.1",
    "@tsconfig/node16": "1.0.3",
    "@types/glob": "8.0.0",
    "@types/node": "16.11.65",
    "eslint": "8.25.0",
    "eslint-plugin-jest": "27.1.1",
    "eslint-plugin-userscripts": "0.2.10",
    "glob": "8.0.3",
    "jest": "29.0.3",
    "jest-environment-jsdom": "29.0.3",
    "rimraf": "3.0.2",
    "rollup": "3.1.0",
    "rollup-plugin-cleanup": "3.2.1",
    "rollup-plugin-watch": "1.0.1",
    "ts-jest": "29.0.3",
    "typescript": "4.8.4",
    "userscript-metadata": "1.1.0"
  }
}
